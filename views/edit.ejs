<head>
    <link rel="stylesheet"type="text/css" href="/assets/style.css"/>
    </head>
    <style>
        .container .main{
       margin-top :7.0em;
    }
    
    </style>

    <body>
    <%- include ('partials/header') %>
    <div class="ui main text container">
        <div class="ui huge header">
            New Post
        </div>
        <form class="ui form " action="/blogs/<%=b._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
            <input type="text" name="Blog[title]" value="<%=b.title%>" placeholder="title"><br><br>
            </div>
            <div class="field">
            <label>
             Image
            </label>
          
            <input type="text" name="Blog[image]" value="<%=b.image%>" %=placeholder="image"><br><br>
            </div>
            <div class="field">
                <label>
                    Content
                </label>
            <textarea name="Blog[body]" placeholder="content"><%=b.body%></textarea><br><br>
            </div>
            <input class="ui violet big basic button" type="submit">
            </div>
    
        </form>
        
    </div>
    <%- include ('partials/footer') %>
    </body>
    